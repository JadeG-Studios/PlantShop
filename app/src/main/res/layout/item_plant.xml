<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        android:background="#E5E0DA"
        android:layout_width="match_parent"
        android:layout_height="500dp" >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:layout_alignBottom="@id/textdesc"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="230dp"
            android:adjustViewBounds="true"
            android:src="@drawable/peacelily"></ImageView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"

        android:id="@+id/textdesc"
        android:background="@color/white"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/planttype"
            android:layout_marginStart="25dp"
            android:text="Indoor"
            android:fontFamily="@font/worksanr"
            android:textColor="#888E9A"
            android:textSize="16sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/plantname"
            android:layout_marginStart="25dp"
            android:layout_height="match_parent"
            android:text="Peace Lily"
            android:fontFamily="@font/worksansemi"
            android:textColor="#24243F"
            android:textSize="35sp"></TextView>

        <TextView
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:id="@+id/plantdesc"
            android:lineSpacingExtra="3dp"
            android:minLines="5"
            android:layout_marginStart="25dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/worksanr"
            android:text="The peace lily plant is well known for its air-purifying abilities as a houseplant "
            android:textColor="#888E9A"
            android:textSize="16sp"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/plantprice"
            android:layout_marginStart="25dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:text="Buy for 20000 VND"
            android:fontFamily="@font/worksans"
            android:textColor="#51B1A6"
            android:textSize="16sp"></TextView>

    </LinearLayout>



    </RelativeLayout>



</androidx.cardview.widget.CardView>

